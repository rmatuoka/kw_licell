	<% title "Editar Usuário - #{@user.nome}" %>  
  <div id="Box_register_form">	
		<%= form_for [:admin, @user] do |f| %>
			<%= f.error_messages %>
			<p>
				<span>Cadastro Ativado?</span>
				<b><%=print_active(@user.active)%></b>
				<%if !@user.active %>
					<%= link_to "Ativar Cadastro", user_active_admin_user_path(@user)%>
				<%end%>
			</p>
			<p>
				<%= f.label :email, "Email:"%>
		        <%=f.text_field :email%>
			</p>
			<p>
				<%= f.label :cpf, "Cpf:"%>
		        <%=f.text_field :cpf%>
			</p>
			<p>
				<%= f.label :rg, "Rg:"%>
		        <%=f.text_field :rg%>
			</p>
			<p>
				<%= f.label :password, "Senha:" %>
				<%=f.password_field :password%>
			</p>
			<p>
				<%= f.label :password_confirmation, "Repita Senha:" %>
			 	<%=f.password_field :password_confirmation%>
			</p>
		  <%if User.find(current_user.id).has_role? :admin%>
		  <h1>Regras</h1>
		  <p>
			Tipo:<br />
			<%= f.radio_button :role, :admin %>Administrador
			<%= f.radio_button :role, :supervisor %>Supervisor
			<%= f.radio_button :role, :user %>Usuário
		  </p>
		  <%end%>
		<br />
  		<p><%= f.submit %> |   <%= link_to "Voltar", admin_users_path %></p>
		<%end%>
	</div>
