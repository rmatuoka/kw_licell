<body>
<div id='top-bar'>
  <%=render :file => "layouts/_userbar.html.erb"%>
</div>
<div id='header'>
	<div id='header-content'>
    	<div id='header-logo'>
        	<a href="#" class="top-bar-um"><img src="images/logo.png" border='0' /></a>
        </div>
        <div id='header-nav'>
            <% addclass = false 
              @category_site.each do |category|%>
            	  <div class="nav <%=("nav-bg") if addclass == true %>" ><%=link_to category.name, categoria_path(category.url_slug)%></div>
            <% addclass = !addclass
              end%>
        </div>
    </div>
</div>
<div id='slider'>
	<div id="slider-container">
        <div id='s4'>
            <a href="#"><img src="images/img_slider.png" border='0' width="942" height="264" /></a>
            <a href="#"><img src="images/img_slider.png" border='0' width="942" height="264" /></a>
            <a href="#"><img src="images/img_slider.png" border='0' width="942" height="264" /></a>
