        	<div id="Menu_Cart">
                <div id="Menu">
                  <ul>
                      <%if !@cart.items.blank?%>
				              <%for cart_item in @cart.items%>
					              <li class="Cart_item"><%=link_to cart_item.quantity.to_s + "  " +cart_item.title + "(s)", produto_path(cart_item.id_product)%></li>
				              <%end%>
                        <li class="Total_txt">Total :</li>
					              <li class="Total_val"><%=number_to_currency(@cart.total_price)%></li>
					              <li class="Btns_place"><%=link_to("Ir Para o carrinho",carrinhos_path, :class =>"Btn_cart")%><%=link_to("Finalizar Compra",carrinhos_path, :class =>"Btn_fnz_cmp")%></li>
				              <%else%>
						              <li>Não há itens no carrinho.</li>
				              <%end%>
                  </ul>
                </div>
            </div>	
      </div>

			<%end%>
