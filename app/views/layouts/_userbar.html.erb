				              <%else%>
						              <li>Não há itens no carrinho.</li>
				              <%end%>
                  </ul>
                </div>
            </div>
      </div>

			<%else%>
			<div id="User_bar_logoff">


      <!-- new USUARIO deslogado -->
      <div id='itens-top-bar' style="height:45px !important;">   
          <span><%=data_atual_extenso%></span>     	
          <%=link_to(image_tag("bt_top_um.png",:width=>"121" , :height=>"17"), accounts_path, :class => "top-bar" )%>
          <%=image_tag("bt_top_dois.png",:width=>"145" , :height=>"20", :class => "top-bar closed", :id=>"botao" ) %>
