<%=javascript_include_tag "funcoes"%>
		
			<%if current_user%>
      <!-- new USUARIO LOGADO -->
      <div id='itens-top-bar' >        	
          <%=link_to(image_tag("bt_top_um.png",:width=>"121" , :height=>"17"), accounts_path, :class => "top-bar" )%>
          <%=link_to(image_tag("bt_top_dois.png",:width=>"145" , :height=>"20"), :class => "top-bar closed")%>
          <%=link_to(image_tag("bt_top_tres.png",:width=>"48" , :height=>"11"), logout_path, :class => "top-bar" )%>
        	<div id="Menu_Cart">
                <div id="Menu">
                  <ul>
                      <%if !@cart.items.blank?%>
				              <%for cart_item in @cart.items%>
					              <li><%=link_to cart_item.quantity.to_s + "  " +cart_item.title + "(s)", produto_path(cart_item.id_product)%></li>
