<%=form_for @user do |f|%>
	<%= f.error_messages :header_message => "", :message => "", :header_tag => "" %>
		<div id='form_linha'>
			<%=f.text_field :nome, :value=>"Nome Completo:",:class => "input_form big_input_form", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			<h2 id="id_sexo"><%= f.label :sexo, "Sexo:"%></h2>
			<%= f.radio_button :sexo, :masculino, :class=>"input_form", :id=>"id_sexo", :style=>"margin-left:540px;" %><h3 id="id_sexo" style="margin-left:560px;">Masculino</h3>
			<%= f.radio_button :sexo, :feminino, :class=>"input_form", :id=>"id_sexo", :style=>"margin-left:670px;" %><h4 id="id_sexo" style="margin-left:690px;">Feminino</h4><br />
		</div>
		<div id='form_linha'>
			<h2 id="id_data"><%= f.label :nascimento, "Data de Nascimento:" %>
				<%= f.date_select :nascimento,{ :start_year => 1920},{ :class => "input_form"}%>
				<%=f.text_field :email, :class => "input_form big_input_form", :style=>"width:390px !important;", :value=>"E-mail:", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			</h2>
			<br />
		</div>
		<div id='form_linha'>
			<%=f.text_field :rg, :class => "input_form big_input_form",:value=>"RG: 00.000.000-2", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			<%=f.text_field :cpf, :class => "input_form big_input_form",:value=>"CPF: 000.000.000-00", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			<br />
		</div>
		<div id='form_linha'>
			<h2><%= f.label :phone, "Telefone:" %>
					<input class="input_form short_input_form" /> 
					<%=f.text_field :phone, :class => "input_form small_input_form" %>
					&nbsp;&nbsp;
				<%= f.label :cellphone, "Celular:"%>
					<input class="input_form short_input_form" /> 
					<%=f.text_field :cellphone, :class => "input_form small_input_form" %>
			</h2><br />
		</div>
		<div id='form_linha'>
			<%=f.text_field :address, :class => "input_form giant_input_form",:value=>"EndereÃ§o", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
		</div>
		<div id='form_linha'>
			<%=f.text_field :quarter, :class => "input_form big_input_form",:value=>"Bairro:", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>	
			<%=f.text_field :number, :class => "input_form short_input_form",:style=>"margin-left:3px;",:value=>raw("N&deg;"), :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			<%=f.text_field :complement, :class => "input_form medium_input_form",:style=>"margin-left:6px;",:value=>"Complemento:", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>
			<br />
		</div>
		<div id='form_linha'>
			<%=f.text_field :city, :class => "input_form medium_input_form",:value=>"Cidade:", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>	
			<%= f.select(:state, [["AC", "AC"], ["AL","AL"], ["AP", "AP"],
			["AM", "AM"], ["BA", "BA"], ["CE", "CE"],
			["DF", "DF"], ["ES", "ES"], ["GO", "GO"],
			["MA", "MA"], ["MT", "MT"], ["MS", "MS"],
			["MG", "MG"], ["PA", "PA"], ["PB", "PB"],
			["PR", "PR"], ["PE", "PE"], ["PI", "PI"],
			["RJ", "RJ"], ["RN", "RN"], ["RS", "RS"],
			["RO", "RO"], ["RR", "RR"], ["SC", "SC"],
			["SP", "SP"], ["SE", "SE"], ["TO", "TO"]],{},{:class => "input_form",:style=>"width:127px;margin-left:5px;"}) %>

			<%=f.text_field :cep, :class => "input_form medium_input_form",:style=>"margin-left:5px;",:value=>"CEP:", :onfocus => "javascript:check_text_onfocus(this)", :onblur => "javascript:check_text_onblur(this)"%>	
			<br />
		</div>
		<div id='form_linha'>
			<h2><%= f.label :password, "Sua Senha:" %>
				<%=f.password_field :password, :class => "input_form small_input_form",:style=>"margin-left:5px;"%>	
				<%= f.label :password_confirmation, "Repita Senha:" %>                  
				<%=f.password_field :password_confirmation, :class => "input_form small_input_form"%>
			</h2>
		<h2>&nbsp;</h2>
		<br />
		</div>
		<div id='form_linha'>
			<%=image_submit_tag "bt_finalizar_cadastro.png", :style=>"margin-left:20px; float:right;"%>
			<%if !current_user %>
			<input type="image" src="../images/bt_limpa_cadastro.png" onclick="document.theForm.reset();return false;" style="float:right; margin-left:20px;" />
			<%end%>	
		</div>
<%end%>













