<%content_for :title do%>
	Meus Pedidos
<%end%>


<%content_for :head do%>
	<%=stylesheet_link_tag "my_orders"%>
	
	<script>
	$(document).ready(function() {
		$(".tab_orders_content").hide();
	});
	
	function showclosed($idorder)
	{
		if($("#tab_orders_item_"+$idorder).hasClass("Item_gray"))
		{
		  $("#tab_orders_content_"+$idorder).slideDown('fast');
		  $("#tab_orders_item_"+$idorder).removeClass("Item_gray");
		  $("#tab_orders_item_"+$idorder).addClass("Item_orange");	  
		}
		else 
		{
			$("#tab_orders_content_"+$idorder).slideUp('fast');
			$("#tab_orders_item_"+$idorder).removeClass("Item_orange");
			$("#tab_orders_item_"+$idorder).addClass("Item_gray");					
		}
	}
	</script>
<%end%>

<div id="Box_content">


	<div id="Products">
		<h1 style=" vertical-align:middle; text-align:left;">Minha Conta : Meus Pedidos</h1>       
		<%@myorders.each do |order|%>
		<!-- item-start --> 		
		<div id="tab_orders">        
			<div id="tab_orders_item_<%= order.id %>" class="Item_gray tab_orders_item" onclick="showclosed(<%= order.id %>)">
				<table width="960" border="0">
					<tr>
						<td class="Tit_text">
							<h2 class="Table_tit">Pedido NÂ°: <%=order.id%></h2>
						</td>
						<td class="Tit_text"><h2 class="Table_tit" >
							&nbsp;</h2>
						</td>
						<td  class="Tit_text">
							<span class="Table_status">Status:<%=traduz_tipo_do_pagamento(order.payment_type)%></span>
							<div id="Status"><%=traduz_status_do_pedido(order.status)%></div>
						</td>
					</tr>                 
				</table>
			</div>        
			<div id="tab_orders_content_<%= order.id %>" class="closed tab_orders_content">
				<div class="Title_info">            
					<table width="940" height="26">
						<tr>
							<td  class="Tit_text">
								<h2 class="Table_tit3">Data do Pedido: <%= I18n.localize(order.created_at, :format => "%d/%m/%Y")%></h2>
							</td>
							<td  class="Tit_text">
								<h2 class="Table_tit3"></h2>
							</td>
							<td  class="Tit_text Cel_Cust">
								<h2 class="Table_tit3"><!-- Data do Entrega: 00/00/0000 - 00:00 --></h2>
							</td>
						</tr>             
					</table>
				</div>
				<div class="Title_table2">
					<table width="940">
						<tr>
							<td>&nbsp;</td>
							<td>Produto</td>
							<td>Valor Un.</td>
							<td>Qntd.</td>
							<!--<td width="195">Presente</td> -->
						</tr>
					</table>
				</div>            
				<!-- PRODUTOS -->
				<%order.order_products.each do |produto|%>
				<div class="Content_table">
					<table width="940">
						<tr class="Bg_table_line">
							<td ><img src="images/img_product.png" width="23" height="41" /></td>
							<td ><%=produto.product.name%></td>
							<td ><b><%=number_to_currency(produto.price)%></b></td>
							<td ><%=produto.amount%></td>
							<!-- <td width="168">Sim</td> -->
						</tr>
					</table>
				</div>
				<%end%>
			</div>
		</div>  
		<%end%> 
	</div> 
</div>	                                                   
</div>	                                                   
<!--item-end-->

